<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/transaction_row_icon"
        android:layout_marginLeft="8dp"
        android:src="@drawable/drink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

       />
    <LinearLayout
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/transaction_row_catname"
            android:layout_marginTop="8dp"
            android:text="BANK"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/transaction_row_cat_date"
            android:layout_marginTop="8dp"
            android:text="3/2/2017 : 12:35 PM."
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:id="@+id/transaction_row_payment"
        android:layout_marginTop="25dp"
        android:layout_marginRight="8dp"
        android:text="12566411 B"
        android:textSize="18sp"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/transaction_row_transaction_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
    </LinearLayout>


</LinearLayout>